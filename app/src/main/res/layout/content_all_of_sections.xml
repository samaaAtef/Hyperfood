<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.sm.hyperfood2.AllOfSections"
    tools:showIn="@layout/app_bar_all_of_sections">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <EditText
            android:layout_width="286dp"
            android:layout_height="30dp"
            android:id="@+id/editsearch"
            android:background="@drawable/stroke_btn"
            android:hint="بحث .."
            android:paddingRight="20dp"
            android:layout_weight="0.58" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:onClick="BtnSearch"
            android:src="@drawable/search_icon"
            android:id="@+id/imgsearch"
            android:background="@drawable/stroke_btn_red" />

    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"

        android:layout_gravity="right"
        android:text="كل الأقسام"
        android:drawableRight="@drawable/red"
        android:textSize="20sp"
        android:id="@+id/txtallsections"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridview"
        ></ListView>



</LinearLayout>
