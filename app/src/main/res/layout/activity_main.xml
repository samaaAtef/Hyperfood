<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#b2f0f7"
    tools:context="com.example.sm.hyperfood2.MainActivity">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/imgBackforMain"
        android:src="@drawable/back_icon1"
        android:layout_gravity="left" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/logo_login"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="اول هايبر ماركت الكترونى فى جميع "
        android:paddingRight="10dp"
        android:id="@+id/txtfirst"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:fontFamily="@string/abc_action_menu_overflow_description" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="أنحاء المملكة"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/txtfirst2"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="البريد الالكترونى "
        android:gravity="center"
        android:autoLink="email"
        android:id="@+id/btnphone"
        android:layout_marginRight="16dp"
        android:background="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="كلمة السر"
        android:password="true"
        android:gravity="center"
        android:id="@+id/btnpassword"
        android:layout_marginRight="16dp"
        android:background="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="هل نسيت كلمة السر ؟"
        android:id="@+id/txtforget"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="دخول"
        android:id="@+id/btnenter"
        android:background="#f23b4d"
        android:textColor="#fefafa"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ليس لديك حساب ؟"
            android:layout_alignParentRight="true"
            android:id="@+id/txtnotacco"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="سجل الأن"
            android:layout_toLeftOf="@+id/txtnotacco"
            android:id="@+id/txtRegister"
            android:textColor="#3930e9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/khedma"
            android:text="خدمه العملاء"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txtRegister"
            android:layout_toEndOf="@+id/txtRegister" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/khedmanum"
            android:text="509946100"
            android:autoLink="phone"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal"
            android:background="#41bbdc"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/phone"
            android:layout_alignTop="@+id/khedmanum"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/khedmanum"
            android:layout_alignStart="@+id/khedmanum" />

    </RelativeLayout>
</LinearLayout>
