<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context=".MyAccount"
    tools:showIn="@layout/app_bar_myaccount">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="40dp"
        android:paddingBottom="10dp"
        >

        <EditText
            android:layout_width="286dp"
            android:layout_height="30dp"
            android:id="@+id/editsearch"
            android:background="@drawable/stroke_btn"
            android:hint="بحث .."
            android:paddingRight="5dp"

            android:layout_weight="0.58" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/search_icon"
            android:id="@+id/imgsearch"
            android:background="@drawable/stroke_btn_red" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#d31f1f">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="حسابي"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:id="@+id/txtmyacco"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/update1"

            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="تعديل"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"
            android:paddingTop="5dp"
            android:id="@+id/update1"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imgupdate"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_profile_icon"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#ffffff"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/user_profile_icon"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@+id/txtname"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاسم              : "
            android:textColor="#aa1616"
            android:textSize="20sp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/txtname"
            />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text=" اكسترا لتقنية المعلومات"
            android:paddingTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="180dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:background="#ffffff"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/mail_profile_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="البريد الالكترونى :"
            android:textColor="#aa1616"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:textSize="20sp"
            android:id="@+id/txtemail"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="extra4it.com@.com "
            android:layout_alignParentRight="true"
            android:paddingTop="10dp"
            android:layout_marginRight="180dp"
            android:autoLink="email"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:background="#ffffff"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/phone_profile_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رقم الجوال          :"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:textColor="#aa1616"
            android:id="@+id/txtPhone"
            android:textSize="20sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="966 0565597139 "
            android:paddingTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="180dp"
            android:autoLink="phone"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#ffffff"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/password_profile_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="كلمه السر            :"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:textColor="#aa1616"
            android:id="@+id/txtpassword"
            android:textSize="20sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000000000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="180dp"
            android:paddingTop="10dp"
            android:password="true"
            />
    </RelativeLayout>
</LinearLayout>
