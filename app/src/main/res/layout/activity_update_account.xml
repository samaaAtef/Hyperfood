<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.sm.hyperfood2.Update_account">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الاسم"
                android:layout_gravity="right"
                android:id="@+id/txtnameU"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginBottom="10dp" />

            <EditText android:id="@+id/nameU"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_red"
                android:text="اكسترا لتقنيه المعلومات"
                android:textSize="22dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#6982e5"
                android:paddingRight="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="البريد الالكترونى"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:id="@+id/txtemailU"
                android:textSize="20dp"
                android:layout_marginBottom="10dp" />

            <EditText android:id="@+id/emailU"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_red"
                android:text="extra3it@gmail.com"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="right"
                android:paddingRight="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رقم الجوال"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/txtphoneU"
                android:layout_marginBottom="10dp" />

            <EditText android:id="@+id/phoneU"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_red"
                android:text="0565854558888"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="right"
                android:paddingRight="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="كلمة السرالجديدة"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:id="@+id/txtnewpassU"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:paddingTop="5dp"
                android:ems="10"
                android:id="@+id/newpassU"
                android:text="11111111111111"
                android:gravity="right"
                android:background="@drawable/edittext_red"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تأكيد كلمة السر"
                android:layout_gravity="right"
                android:id="@+id/txtpassU"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginBottom="10dp" />

            <EditText android:id="@+id/passU"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:background="@drawable/edittext_red"
                android:text="11111111111111"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="right"
                android:paddingRight="5dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حفظ"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:background="#1494fc"
                android:id="@+id/btnsave" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
